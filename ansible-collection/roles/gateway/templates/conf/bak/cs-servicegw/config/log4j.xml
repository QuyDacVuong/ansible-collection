<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>

	<!-- Appenders -->
	<appender name="stacktraceLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="name" value="stacktraceLog"/>
		<param name="file" value="${catalina.base}/logs/stacktrace.log"/>
		<param name="datePattern" value="\'.\'yyyyMMdd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} [%5p] (%c:%F:%M:%L) - [%t] %m%n" />
		</layout>
	</appender>
	<appender name="fileappender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.base}/logs/ServiceGateway.log"/>
		<param name="Threshold" value="debug"/>
		<param name="datePattern" value="\'.\'yyyyMMdd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} [%5p] (%c:%F:%M:%L) - [%t] %m%n" />
		</layout>
	</appender>
	<appender name="console" class="org.apache.log4j.ConsoleAppender"> 
		<param name="Threshold" value="warn"/>
		<param name="Target" value="System.out"/> 
		<layout class="org.apache.log4j.PatternLayout"> 
			<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} [%5p] (%c:%F:%M:%L) - [%t] %m%n" />
		</layout> 
	</appender> 
	<logger name="StackTrace" additivity="false">
		<appender-ref ref="stacktraceLog"/>
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="fileappender" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
