[Unit]
Description=Promtail
Wants=network-online.target
After=network-online.target

[Service]
User=promtail
Group=promtail
Type=simple
ExecStart=/bin/bash -lc '/usr/local/bin/promtail-linux-amd64 -config.file=/etc/promtail/promtail.yaml -config.expand-env=true'

[Install]
WantedBy=multi-user.target

