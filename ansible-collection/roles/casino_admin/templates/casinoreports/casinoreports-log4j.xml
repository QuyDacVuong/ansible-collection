<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>

	<!-- Appenders -->
	<appender name="stacktraceLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="name" value="stacktraceLog"/>
		<param name="file" value="d:\\logs\\casinoreports\\stacktrace.log"/>
		<param name="datePattern" value="\'.\'yyyyMMdd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="\[%d{yyyy/MM/dd HH:mm:ss}\]%n%d{HH:mm:ss} [%5p] (%c:%F:%M:%L) - [%t] %m%n" />
		</layout>
	</appender>
	<appender name="mybatisSqlLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="name" value="mybatisSqlLog"/>
		<param name="file" value="d:\\logs\\casinoreports\\mybatisSql.log"/>
		<param name="datePattern" value="\'.\'yyyyMMdd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="\[%d{yyyy/MM/dd HH:mm:ss}\]%n%d{HH:mm:ss} [%5p] (%c:%F:%M:%L) - [%t] %m%n" />
		</layout>
	</appender>	
	<appender name="fileappender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="d:\\logs\\casinoreports\\pyrcasinoreports.log"/>
		<param name="Threshold" value="info"/>
		<param name="datePattern" value="\'.\'yyyyMMdd"/>
		<!-- <param name="maxFileSize" value="5KB" />
		<param name="maxBackupIndex" value="100" /> -->
		<layout class="org.apache.log4j.PatternLayout">
			<!-- <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n" /> -->
			<param name="ConversionPattern" value="\[%d{yyyy/MM/dd HH:mm:ss}\]%n%d{HH:mm:ss} [%5p] (%c:%F:%M:%L) - [%t] %m%n" />
		</layout>
	</appender>
	<appender name="console" class="org.apache.log4j.ConsoleAppender"> 
		<param name="Threshold" value="info"/>
		<param name="Target" value="System.out"/> 
		<layout class="org.apache.log4j.PatternLayout"> 
			<param name="ConversionPattern" value="\[%d{yyyy/MM/dd HH:mm:ss}\]%n%d{HH:mm:ss} [%5p] (%c:%F:%M:%L) - [%t] %m%n" />
		</layout> 
	</appender> 
	<logger name="StackTrace" additivity="false">
		<appender-ref ref="stacktraceLog"/>
	</logger>
	<logger name="org.mybatis" additivity="false">
		<level value="debug"/>
		<appender-ref ref="mybatisSqlLog"/>
	</logger>
	<logger name="org.apache.ibatis" additivity="false">
		<level value="debug"/>
		<appender-ref ref="mybatisSqlLog"/>
	</logger>
	<logger name="org.hibernate.SQL" additivity="false">
		<level value="debug"/>
		<appender-ref ref="mybatisSqlLog"/>
	</logger>
	<logger name="org.hibernate.transaction" additivity="false">
		<level value="debug"/>
		<appender-ref ref="mybatisSqlLog"/>
	</logger>
	<logger name="com.ps.casinoreports.mybatis" additivity="false">
		<level value="debug"/>
		<appender-ref ref="mybatisSqlLog"/>
	</logger>
	<!-- Root Logger -->
	<root>
		<priority value="debug" />
		<appender-ref ref="fileappender" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
